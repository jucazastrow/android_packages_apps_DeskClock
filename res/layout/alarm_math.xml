<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dip"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:padding="15dp" >

    <TextView
        android:id="@+id/math_text"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/math_height"
        android:gravity="center_vertical"
        android:padding="5dip"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/math_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/math_1"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_2"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_3"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/math_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/math_4"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_5"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_6"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/math_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/math_7"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_8"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_9"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/math_height"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/math_0"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_reset"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1" />

        <Button
            android:id="@+id/math_done"
            android:layout_width="0dp"
            android:layout_height="@dimen/math_height"
            android:layout_weight="1"/>
    </LinearLayout>

</LinearLayout>